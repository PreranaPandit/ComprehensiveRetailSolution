<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.SearchSalesActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D47A1"
        android:padding="15dp"
        android:text="'Sales is not about selling anymore, but about building trust and educating.'"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold|normal"
        android:textColor="#F8F3F3"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSalesSerach"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shapeemail"
            android:inputType="textEmailAddress"
            android:textColor="#090229"
            android:hint="Search Sales (PAID/UNPAID)"
            android:singleLine="true"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/imgSearchSales"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_marginTop="10dp"
            />








    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

        <!-- JUST FOR YOU -->

        <!-- Product Image - JSON PARSE -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/salesRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>



    </LinearLayout>




</LinearLayout>