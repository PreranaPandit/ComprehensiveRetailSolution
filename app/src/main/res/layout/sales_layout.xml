<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DBE5EC"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        app:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        >

        <LinearLayout
            android:layout_width="90dp"
            android:background="#0D47A1"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/aSalesStatus"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="PAID"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#F3EFEF"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <!--            <TextView-->
            <!--                android:id="@+id/tvprice"-->
            <!--                android:layout_width="147dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/tvname"-->
            <!--                android:textAlignment="center"-->
            <!--                android:text="Price"-->
            <!--                android:textColor="#000"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/aCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:drawableLeft="@drawable/ic_identity"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/aBillNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Number"
                android:drawableLeft="@drawable/ic_bill"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/aSalesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sales Date "
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:textStyle="bold|normal"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/aAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Amount"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="10dp"
                android:textStyle="bold|normal"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/aCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_contacts"
                android:drawablePadding="10dp"
                android:textStyle="bold|normal"
                android:textSize="15dp"
                />

            <!--            <TextView-->
            <!--                android:id="@+id/dLocation"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Location"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:drawableLeft="@drawable/ic_gps_fixed_black_24dp"-->
            <!--                android:drawablePadding="10dp"-->
            <!--                android:textStyle="bold|normal"-->
            <!--                android:textSize="20dp"-->
            <!--                />-->

        </LinearLayout>



        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            >



            <ImageView
                android:id="@+id/dCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_phone_in_talk_black_24dp"
                />

            <ImageView
                android:id="@+id/dDelete"
                android:layout_width="35dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_delete_forever_black_24dp"
                />

        </LinearLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>